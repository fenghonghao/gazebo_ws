<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="bicycle_car">

  <!-- 基础链接 -->
  <link name="base_link">
    <inertial>
      <mass value="500"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="200" iyz="0" izz="300"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="2.5 1.5 1.0"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="2.5 1.5 1.0"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
  </link>

  <!-- 后轮链接 -->
  <link name="rear_wheel_link">
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- 后轮驱动关节（连续旋转） -->
  <joint name="rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_wheel_link"/>
    <origin xyz="-1.0 0 -0.5" rpy="0 1.5708 0"/> <!-- 后轮位置（相对于base_link） -->
    <axis xyz="0 1 0"/> <!-- 旋转轴（沿y轴） -->
    <limit effort="1000" velocity="100"/>
    <dynamics damping="1.0" friction="0.1"/>
  </joint>

  <!-- 前轮转向关节链接（转向部分） -->
  <link name="front_steering_link">
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.3" ixy="0" ixz="0" iyy="0.3" iyz="0" izz="0.3"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- 前轮转向关节（旋转轴垂直向上） -->
  <joint name="front_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_steering_link"/>
    <origin xyz="1.0 0 -0.5" rpy="0 0 0"/> <!-- 前轮转向部分位置 -->
    <axis xyz="0 0 1"/> <!-- 转向旋转轴（沿z轴） -->
    <limit effort="500" velocity="10" lower="-0.523" upper="0.523"/> <!-- ±30度（弧度） -->
    <dynamics damping="10.0" friction="1.0"/>
  </joint>

  <!-- 前轮链接 -->
  <link name="front_wheel_link">
    <inertial>
      <mass value="8.0"/>
      <inertia ixx="0.4" ixy="0" ixz="0" iyy="0.4" iyz="0" izz="0.4"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- 前轮旋转关节（随转向联动） -->
  <joint name="front_wheel_joint" type="continuous">
    <parent link="front_steering_link"/>
    <child link="front_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    <axis xyz="0 1 0"/> <!-- 滚动轴（沿y轴） -->
    <limit effort="1000" velocity="100"/>
    <dynamics damping="1.0" friction="0.1"/>
  </joint>

  <!-- Gazebo控制器配置 -->
  <gazebo>
    <plugin name="bicycle_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/car</robotNamespace>
      <controlPeriod>0.01</controlPeriod>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
    </plugin>
  </gazebo>

  <!-- 控制器参数加载（指向外部yaml文件）
  <xacro:property name="controller_config" value="$(find your_car_package)/config/bicycle_controller.yaml"/>
  <rosparam command="load" file="$(controller_config)"/> -->

</robot>